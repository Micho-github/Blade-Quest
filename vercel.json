{
  "version": 2,
  "builds": [
    {
      "src": "Client/app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Client/app/build"
      }
    },
    {
      "src": "Server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/Client/app/build/$1"
    }
  ]
}
