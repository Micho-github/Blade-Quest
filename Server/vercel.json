{
  "version": 2,
  "builds": [
    {
      "src": "client/app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/app/build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/app/build/$1"
    }
  ]
}
